<% var numOfTrue = 0 %>

<% for(var i = 0; i < chat.length; i++){ 
    if(chat[i].body.isRead === false){
        numOfTrue++;
    }
} %>


<a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <span class="fa fa-globe "></span> <b class="caret"></b> 
    <% if(numOfTrue !== 0){ %>
        <span class="label label-primary nav-label-icon" id=""> <%= numOfTrue %> </span>
    <%} else {%>
        <span class="label label-primary nav-label-icon" id=""></span>
    <%} %>
</a>
<ul class="dropdown-menu dmenu">
    <li>
        <div class="navbar-login">
            <div class="col-md-12">
                <div class="row">
                    <div class="dropdown-tag">
                        <h3 class="text-center dropdown-tag-head">
                            Notifications
                        </h3>
                    </div>
                </div>
            </div>
            <div class="col-md-12">

                <% if(chat.length > 0){ 
                    _.forEach(chat, function(value){
                %>

                <%if(value.body.senderName !== user.username){%>
                <a data-value="<%= value.body._id%>" id="messageLink" href="/chat/<%= value.body.senderName.toLowerCase().replace(' ', '-') %>.<%= user.username.toLowerCase().replace(' ', '-') %>">
                <div class="row">
                    <div class="col-md-3">
                        <p class="text-center">
                           <img src="https://placehold.it/300x300" class="img-circle img-responsive dropdown-img" />
                        </p>
                    </div>
                    <div class="col-md-9 pleft-0">
                        <div class="row">
                            <div class="col-md-12 textRow">
                                <div class="col-md-12" id="textRow">
                                    <p class="text-left drop-name">
                                        <% if(value.body.receiverName !== user.username){ %>
                                        <strong><%= value.body.receiverName%></strong>
                                        <%} else {%>
                                        <strong><%= value.body.senderName%></strong>
                                        <%}%>
                                    </p>
                                    <input type="hidden" name="chatId" id="chatId" value="<%= value.body._id%>">
                                    <%= value.body.message%>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </a>

                <% } else if(value.body.senderName === user.username){%>

                    <a data-value="<%= value.body._id%>" id="messageLink" href="/chat/<%= value.body.receiverName.toLowerCase().replace(' ', '-') %>.<%= user.username.toLowerCase().replace(' ', '-') %>">
                        <div class="row">
                            <div class="col-md-3">
                                <p class="text-center">
                                   <img src="https://placehold.it/300x300" class="img-circle img-responsive dropdown-img" />
                                </p>
                            </div>
                            <div class="col-md-9 pleft-0">
                                <div class="row">
                                    <div class="col-md-12 textRow">
                                        <div class="col-md-12" id="textRow">
                                            <p class="text-left drop-name">
                                                <% if(value.body.receiverName !== user.username){ %>
                                                <strong><%= value.body.receiverName%></strong>
                                                <%} else {%>
                                                <strong><%= value.body.senderName%></strong>
                                                <%}%>
                                            </p>
                                            <input type="hidden" name="chatId" id="chatId" value="<%= value.body._id%>">
                                            <%= value.body.message%>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        </a>

                <% }%>
                <% })}%>
                <hr class="dropdown-divider" />

            </div>
        </div>
    </li>

</ul>
